{{> navbar }}

{{#with place}}
    <h1>{{name}}</h1>
    <p>{{description}}</p>
    <h2>Average Rating:</h2>
    <p>{{ratings.averageRating}}</p>
    <section>
        <h3>Physical accessibility:</h3>
        <p>{{ratings.physicalRating}}</p>
        <h3>Sensory accessibility:</h3>
        <p>{{ratings.sensoryRating}}</p>
        <h3>Neurodivergent accessibility:</h3>
        <p>{{ratings.neurodivergentRating}}</p>
    </section>

    <div class="two-pane">
        <section>
            <h2>Reviews</h2>
            {{#unless reviews.length}}
                <p class="empty-section">No reviews yet!</p>
            {{/unless}}
            {{#each reviews}}
                {{> reviewCard this }}
            {{/each}}
        </section>
        <section>
            {{#unless comments.length}}
                <p class="empty-section">No comments yet!</p>
            {{/unless}}
            <h2>Comments</h2>
            {{#each comments}}
                {{> commentCard this }}
            {{/each}}
        </section>
    </div>


{{/with}}