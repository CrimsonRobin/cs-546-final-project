{{#with place}}
    <a href="/places/{{_id}}"></a>
    <div class="card">
        <div class="overall-rating {{ratings.averageRating}}">
            <p>{{ratings.averageRating}}</p>
        </div>
        <div class="main">
            <h2>{{name}}</h2>
            <div class="icon-and-text">
                <span class="material-symbols-outlined">location_on</span>
                <p>{{address}}</p>
            </div>
            <div class="icon-and-text">
                <span class="material-symbols-outlined">star</span>
                <p>{{ratings.length}}</p>
            </div>
            <div class="icon-and-text">
                <span class="material-symbols-outlined">comment</span>
                <p>{{comments.length}}</p>
            </div>
        </div>
        <div class="individual-ratings">
            <div>
                <span class="material-symbols-outlined">accessible_forward</span>
                <p>Physical</p>
                <span class="individual-rating {{ratings.physicalRating}}">{{ratings.physicalRating}}</span>
            </div>
            <div>
                <span class="material-symbols-outlined">blind</span>
                <p>Sensory</p>
                <span class="individual-rating {{ratings.sensoryRating}}">{{ratings.sensoryRating}}</span>
            </div>
            <div>
                <span class="material-symbols-outlined">neurology</span>
                <p>Neurodivergent</p>
                <span class="individual-rating {{ratings.neurodivergentRating}}">{{ratings.neurodivergentRating}}</span>
            </div>
        </div>

    </div>
{{/with}}