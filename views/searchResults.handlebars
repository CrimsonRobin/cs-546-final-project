{{#if errors}}
    <h1>Error!</h1>
    <ul class="error">
        {{#each errors}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
{{else}}
    <h1>{{message}}</h1>
    {{#each results}}
        {{> placeCard place=this user=user }}
    {{/each}}
    {{#unless results}}
        <p>No results found. <a href="/api/nominatimSearch"></a></p>
    {{/unless}}
{{/if}}